<Window x:Class="Sql2ExcelExporterUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Sql2ExcelExporterUI.Properties"
        xmlns:local="clr-namespace:Sql2ExcelExporterUI"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.MW_TITLE}" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="5,0,5,0">
            <Label Content="{x:Static p:Resources.MW_SERVER_LABEL}" VerticalAlignment="Center"/>
            <TextBox x:Name="ServerTextBox" Width="200" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <Label Content="{x:Static p:Resources.MW_DATABASE_LABEL}" VerticalAlignment="Center"/>
            <TextBox x:Name="DatabaseTextBox" Width="300" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <Button Content="{x:Static p:Resources.MW_ASSIST_BUTTON_CONTENT}" x:Name="DatabaseAssistButton" VerticalAlignment="Center" Margin="5,0,0,0" Padding="5,0,5,0" Click="DatabaseAssistButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
